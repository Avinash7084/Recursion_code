#include<iostream>
using namespace std;

int powe(int a,int b){
    if(b==1) return a;
    if(b==0) return 1;
   
   if(b%2==0){
     int ans = powe(a,b/2);
      return ans*ans;
   }
   else{
       
       int ans = powe(a,b/2);
       return (ans*ans)*a;
   }
}

int main(){
    int a,b;
    cout<<"enter the number : ";
    cin>>a;
    cout<<"enter the power number : ";
    cin>>b;
    
    int final = powe(a,b);
    cout<<final;
}
